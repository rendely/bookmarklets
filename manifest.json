{
  "manifest_version": 3,
  "name": "Bookmarklet loader",
  "version": "1",
  "action": {
    "default_title": "Click to run"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+K",
        "mac": "Ctrl+K",
        "chromeos": "Ctrl+K",
        "linux": "Ctrl+K"
      }
    }
  }
}